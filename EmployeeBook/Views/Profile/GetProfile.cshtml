@model Person

@{
    ViewData["Title"] = "GetProfile";
}

<h1>Your Profile</h1>
<div>
    <hr />
    @{string imageBase64 = Convert.ToBase64String(Model.ProfilePicture);
        string imageSrc = string.Format("data:image/png;base64,{0}", imageBase64);}
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.LabelFor(model => model.FirstName, "First Name")
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.FirstName, "First Name")
        </dd>
        <dt class = "col-sm-2">
            @Html.LabelFor(model => model.LastName, "Last Name")
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.LastName)
        </dd>
        <dt class = "col-sm-2">
            @Html.LabelFor(model => model.WorkerCode, "Worker Code")
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.WorkerCode, "WorkerCode")
        </dd>
        <dt class = "col-sm-2">
            @Html.LabelFor(model => model.TelephoneNumber, "Telephone Number")
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TelephoneNumber, "Telephone Number")
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Email)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Email, "Email")
        </dd>
        <dt class = "col-sm-2">
            @Html.LabelFor(model => model.ProfilePicture, "Profile Picture")
        </dt>
        <dd class = "col-sm-10">
            <img src="@imageSrc" alt="Image" />
        </dd>
    </dl>
    <a href="@Url.Action("EditPerson", "Profile", new { id = Model.Id })" class="btn btn-primary">Edit</a>
</div>
<div>
</div>
