@{
    @model Person

    @if (Model != null && Model.ProfilePicture.Length > 0)
    {
        var base64 = Convert.ToBase64String(Model.ProfilePicture);
        var imgSrc = string.Format("data:image/png;base64,{0}", base64);
        <img src="@imgSrc" alt="Image" />
    }
}
